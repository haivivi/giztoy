{
  "name": "recite_poem",
  "references": {
    "poem": "古诗包括唐诗、宋词等中国古典诗词"
  },
  "vars": {
    "title": {"label": "诗名", "type": "string"},
    "author": {"label": "诗人", "type": "string"},
    "era": {"label": "朝代", "type": "string"},
    "subject": {"label": "主题", "type": "string"}
  },
  "patterns": [
    "我想听一首古诗",
    "你会古诗吗",
    "你会唱古诗吗",
    "唱一首古诗",
    "唱个古诗",
    "唱一首诗",
    "我想听你读一首诗",
    "我想听 [title]",
    "我想听 [author] 的 [title]",
    "唱个 [author] 的 [title]",
    "我想听 [author] 的诗",
    "我想听 [era] 的诗",
    "我想听 [era] [author] 的诗",
    "我想听 [era] [author] 的 [title]",
    "我想听 [subject] 的诗"
  ],
  "examples": [
    ["简单的听古诗请求", "我想听古诗", "recite_poem"],
    ["多个指令依次匹配", "我要听李白的静夜思;设置音量为一半", "recite_poem: author=李白, title=静夜思"]
  ],
  "tests": [
    {"input": "我想听古诗"},
    {"input": "我想听李白的静夜思", "args": {"author": "李白", "title": "静夜思"}},
    {"input": "我想听唐代的诗", "args": {"era": "唐代"}},
    {"input": "我想听你读一首诗"},
    {"input": "你可以唱一首古诗《静夜思》吗？", "args": {"title": "静夜思"}},
    {"input": "唱一首古诗"},
    {"input": "唱个古诗"},
    {"input": "唱个李白的静夜思", "args": {"author": "李白", "title": "静夜思"}},
    {"input": "我要听水调歌头", "args": {"title": "水调歌头"}},
    {"input": "唱一首诗"},
    {"input": "你会唱古诗么？"},
    {"input": "I want to hear a Chinese poem"},
    {"input": "Can you recite a poem by Li Bai?", "args": {"author": "Li Bai"}},
    {"input": "Recite a Tang dynasty poem", "args": {"era": "Tang"}},
    {"input": "中国の詩を聞かせて"},
    {"input": "李白の詩を読んで", "args": {"author": "李白"}},
    {"input": "Quiero escuchar un poema chino"},
    {"input": "Recita un poema de Li Bai", "args": {"author": "Li Bai"}},
    {"input": "중국 시를 들려줘"},
    {"input": "이백의 시를 읽어줘", "args": {"author": "이백"}},
    {"input": "Ich möchte ein chinesisches Gedicht hören"},
    {"input": "Rezitiere ein Gedicht von Li Bai", "args": {"author": "Li Bai"}}
  ]
}
