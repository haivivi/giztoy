{
  "name": "play_music",
  "references": {
    "music": "乐曲指没有歌词的纯音乐作品"
  },
  "vars": {
    "title": {"label": "乐曲名", "type": "string"},
    "artist": {"label": "音乐家", "type": "string"},
    "album": {"label": "专辑名", "type": "string"},
    "subject": {"label": "主题", "type": "string"}
  },
  "patterns": [
    "播放音乐",
    "我想听音乐",
    "我想听 [title]",
    "我想听 [artist] 的 [title]",
    "我想听 [artist] 的乐曲",
    "我想听 [album] 的 [title]",
    "我想听 [album] 的乐曲",
    "我想听 [artist] 的 [album] 的乐曲",
    "我想听 [subject] 的乐曲"
  ],
  "examples": [
    ["简单的播放音乐请求", "播放音乐", "play_music"],
    ["用户先叫角色名再说内容", "小赛，我要听卡农。", "play_music: title=卡农"]
  ],
  "tests": [
    {"input": "播放音乐"},
    {"input": "我要听卡农", "args": {"title": "卡农"}},
    {"input": "我想听贝多芬的月光奏鸣曲", "args": {"artist": "贝多芬", "title": "月光奏鸣曲"}},
    {"input": "Play music"},
    {"input": "I want to listen to Canon", "args": {"title": "Canon"}},
    {"input": "Play Moonlight Sonata by Beethoven", "args": {"artist": "Beethoven", "title": "Moonlight Sonata"}},
    {"input": "音楽を再生して"},
    {"input": "カノンを聴きたい", "args": {"title": "カノン"}},
    {"input": "ベートーヴェンの月光を聴きたい", "args": {"artist": "ベートーヴェン", "title": "月光"}},
    {"input": "Pon música"},
    {"input": "Quiero escuchar Canon", "args": {"title": "Canon"}},
    {"input": "음악 틀어줘"},
    {"input": "캐논 듣고 싶어", "args": {"title": "캐논"}},
    {"input": "Spiel Musik"},
    {"input": "Ich möchte Kanon hören", "args": {"title": "Kanon"}}
  ]
}
