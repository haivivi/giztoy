load("@rules_go//go:def.bzl", "go_binary")

package(default_visibility = ["//visibility:public"])

# DashScope CLI e2e test runner (Go)
# Usage:
#   bazel run //e2e/cmd/dashscope:run -- go all
#   bazel run //e2e/cmd/dashscope:run -- rust 1
go_binary(
    name = "run",
    srcs = ["run.go"],
    data = [
        "//go/cmd/giztoy",
    ],
    tags = ["manual"],
)

filegroup(
    name = "commands",
    srcs = glob(["commands/**"]),
)
