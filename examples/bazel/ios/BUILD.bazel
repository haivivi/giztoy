    extensions = [":BazelWidgetExtension"],
    families = [
        "iphone",
        "ipad",
    ],
    infoplists = ["SwiftUIApp/Info.plist"],
    minimum_os_version = "17.0",
    target_compatible_with = _IOS_COMPATIBLE,
