"""iOS example application using rules_apple and rules_swift."""

load("@rules_apple//apple:ios.bzl", "ios_application", "ios_extension")
load("@rules_swift//swift:swift.bzl", "swift_library")

# All iOS targets require macOS to build
_IOS_COMPATIBLE = ["@platforms//os:macos"]

# Swift library containing the app source code
# tags = ["manual"] prevents direct build by //... (would compile on wrong platform)
# Only built indirectly as ios_application dependency
swift_library(
    name = "HelloWorldLib",
    srcs = glob(["HelloWorld/*.swift"]),
    module_name = "HelloWorld",
    tags = ["manual"],
    target_compatible_with = _IOS_COMPATIBLE,
    visibility = ["//visibility:private"],
)

# iOS application bundle
ios_application(
    name = "HelloWorld",
    bundle_id = "com.example.helloworld",
    families = [
        "iphone",
        "ipad",
    ],
    infoplists = ["HelloWorld/Info.plist"],
    minimum_os_version = "15.0",
    target_compatible_with = _IOS_COMPATIBLE,
    visibility = ["//visibility:public"],
    deps = [":HelloWorldLib"],
)

