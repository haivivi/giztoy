# Build options
build --enable_bzlmod

# Test options
test --test_output=errors

# Cache
build --disk_cache=~/.cache/bazel

# Platform
build --incompatible_enable_cc_toolchain_resolution

# CC toolchains: Use system clang/gcc (ring crate incompatible with Zig CC)
# PATH needed for system C compiler on both macOS and Linux
build --action_env=PATH=/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin:/usr/local/bin
build --host_action_env=PATH=/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin:/usr/local/bin
